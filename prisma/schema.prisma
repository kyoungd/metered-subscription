generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  clerkId          String   @unique
  email            String   @unique
  stripeCustomerId String?  @unique  // Owner/Admin's Stripe customer ID
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  subscriptions    Subscription[]  // Subscriptions owned by this user
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   // Owner who pays for this subscription
  clerkOrgId           String   // Clerk organization this subscription is for
  stripeSubscriptionId String   @unique
  stripePriceId        String
  planCode             String   // 'starter', 'pro', 'enterprise'
  status               String   // 'active', 'trialing', 'canceled', 'past_due'
  trialStart           DateTime?
  trialEnd             DateTime?
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  canceledAt           DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clerkOrgId])
  @@index([status])
}

model UsageCounter {
  id             String   @id @default(cuid())
  clerkOrgId     String   // Clerk organization ID (workspace)
  metric         String   // 'api_calls', 'storage_gb', etc.
  periodStart    DateTime
  periodEnd      DateTime
  currentValue   Int      @default(0)
  limit          Int?     // null = unlimited
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([clerkOrgId, metric, periodStart])
  @@index([clerkOrgId])
  @@index([periodStart, periodEnd])
}

model UsageRecord {
  id         String   @id @default(cuid())
  clerkOrgId String   // Clerk organization ID (workspace)
  metric     String
  quantity   Int
  metadata   Json?    // flexible metadata for events
  timestamp  DateTime @default(now())

  @@index([clerkOrgId])
  @@index([metric])
  @@index([timestamp])
}
