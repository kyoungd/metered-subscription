{
  "mcpServers": {
    "stripe": {
      "url": "https://mcp.stripe.com"
    },
    "sentry": {
      "command": "npx",
      "args": ["@sentry/mcp-server@latest"],
      "env": {
        "SENTRY_ACCESS_TOKEN": "<your_sentry_user_token>"
      }
    },
    "typescript-lsp": {
      "command": "npx",
      "args": [
        "-y",
        "--silent",
        "git+https://github.com/jonrad/lsp-mcp",
        "--lsp",
        "npx",
        "-y",
        "--silent",
        "-p",
        "typescript@5.7.3",
        "-p",
        "typescript-language-server@4.3.3",
        "typescript-language-server",
        "--stdio"
      ]
    },
    "tailwindcss-flyonui": {
      "command": "npx",
      "args": ["-y", "flyonui-mcp"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "Prisma-Local": {
      "command": "npx",
      "args": ["-y", "prisma", "mcp"]
    },
    "Prisma-Remote": {
      "url": "https://mcp.prisma.io/mcp"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "postgres-mcp"],
      "env": {
        "POSTGRES_URL": "postgres://<user>:<pass>@<host>:5432/<db>?sslmode=require",
        "READ_ONLY": "true",
        "STATEMENT_TIMEOUT_MS": "5000"
      }
    }
  }
}
