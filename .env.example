# Service Configuration
MTR_SERVICE=metered-subscriptions
MTR_VERSION=0.1.0
MTR_HTTP_PORT=3000
MTR_LOG_LEVEL=info
MTR_TENANT_HEADER=x-tenant-id
MTR_HTTP_DRY_RUN=true

# Subscription Configuration
MTR_TRIAL_DAYS=14

# Optional: BetterStack Logging
# MTR_BETTERSTACK_TOKEN=your_betterstack_token_here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# App Configuration
APP_TIMEZONE=America/Los_Angeles
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/metered_subscription?schema=public"
# For testing, use a separate test database
# DATABASE_URL="postgresql://user:password@localhost:5432/metered_subscription_test?schema=public"

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_TEST_PRODUCT_ID=prod_test_your_product_id_here
STRIPE_TEST_PRICE_ID=price_test_your_price_id_here

# Redis
REDIS_URL=redis://localhost:6379

# Axiom (Audit Logging)
NEXT_PUBLIC_AXIOM_INGEST_ENDPOINT=https://api.axiom.co
AXIOM_TOKEN=your_axiom_token_here
AXIOM_DATASET=your_axiom_dataset_here

# Node Environment
NODE_ENV=development
